<h1>Listing matches</h1>

<table>
  <tr>
    <th>Time da casa</th>
    <th>Time Visitante</th>
    <th>Score team home</th>
    <th>Score team away</th>
    <th>Date match</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%= match.team_home.name if match.team_home.present? %></td>
    <td><%= match.team_alway.name if match.team_alway.present? %></td>
    <td><%= match.score_team_home %></td>
    <td><%= match.score_team_away %></td>
    <td><%= match.date_match %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

